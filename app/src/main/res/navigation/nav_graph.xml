<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterFragment">

    <fragment
        android:id="@+id/characterFragment"
        android:name="com.example.rickandmortykotlin.ui.fragment.character.CharacterFragment"
        android:label="Character"
        tools:layout="@layout/fragment_character">
        <action
            android:id="@+id/action_characterFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.example.rickandmortykotlin.ui.fragment.character.datailCharacter.CharacterDetailFragment"
        android:label="Character Detail"
        tools:layout="@layout/fragment_character_detail" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.example.rickandmortykotlin.ui.fragment.episode.EpisodeFragment"
        android:label="Episode"
        tools:layout="@layout/fragment_episode" />
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.rickandmortykotlin.ui.fragment.location.LocationFragment"
        android:label="Location"
        tools:layout="@layout/fragment_location" />
</navigation>